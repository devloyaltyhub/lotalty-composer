# ==========================================
# LoyaltyHub Automation - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# ------------------------------
# Master Firebase (Required)
# ------------------------------
# Your Master Firebase project that stores all client credentials
MASTER_FIREBASE_PROJECT_ID=your-master-project-id
# IMPORTANT: Paths are relative to loyalty-compose/ directory
# Credentials are stored in loyalty-credentials repo (sibling to loyalty-compose)
# Example: ../loyalty-credentials/shared/master-firebase-service-account.json
MASTER_FIREBASE_SERVICE_ACCOUNT=../loyalty-credentials/shared/master-firebase-service-account.json

# ------------------------------
# Google Cloud (Required)
# ------------------------------
# Service account for creating Firebase projects via Google Cloud API
# This account needs roles: Firebase Admin, Project Creator
# IMPORTANT: Paths are relative to loyalty-compose/ directory
# Example: ../loyalty-credentials/shared/master-gcloud-service-account.json
GOOGLE_APPLICATION_CREDENTIALS=../loyalty-credentials/shared/master-gcloud-service-account.json

# ------------------------------
# App Store Credentials (Required for deployment)
# ------------------------------
# Google Play Store - Service account JSON key
# Create at: https://console.cloud.google.com/iam-admin/serviceaccounts
# IMPORTANT: Paths are relative to loyalty-compose/ directory
# Example: ../loyalty-credentials/shared/google-play-service-account.json
GOOGLE_PLAY_JSON_KEY=../loyalty-credentials/shared/google-play-service-account.json

# App Store Connect - API Key for iOS deployment
# Create at: https://appstoreconnect.apple.com/access/api
# Get Key ID and Issuer ID from App Store Connect
APP_STORE_CONNECT_API_KEY_ID=972C7DBL59
APP_STORE_CONNECT_API_ISSUER_ID=your-issuer-id-here
APP_STORE_CONNECT_API_KEY=../loyalty-credentials/shared/AuthKey_972C7DBL59.p8

# Apple Developer Team ID (Required for iOS code signing)
# Find at: https://developer.apple.com/account -> Membership
APPLE_TEAM_ID=84LT77P2DM

# Fastlane Match - iOS Certificate Management
# Uses the same loyalty-credentials repository (certificates stored in ios-certificates/ subdirectory)
# Example: git@github.com:yourorg/loyalty-credentials.git
MATCH_GIT_URL=git@github.com:yourorg/loyalty-credentials.git
# Password to encrypt/decrypt certificates in the Match repository
MATCH_PASSWORD=your-match-encryption-password

# ------------------------------
# Telegram Notifications (Optional)
# ------------------------------
# Get bot token from @BotFather on Telegram
# Get chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# ------------------------------
# Admin Web Build (Required for web deploy)
# ------------------------------
# Master Firebase password for web builds
# This is injected via --dart-define during flutter build web
# IMPORTANT: Keep this secret! Never commit the actual password.
MASTER_FIREBASE_PASSWORD=your-master-firebase-password

# Cloud Service API Key for push notifications (optional)
CLOUD_SERVICE_API_KEY=your-cloud-service-api-key

