{
  "name": "loyalty-compose",
  "version": "1.0.0",
  "description": "Loyalty Hub - Automacao de clientes white-label",
  "main": "index.js",
  "scripts": {
    "loyalty": "node loyalty-cli.js",
    "start": "node 01-client-setup/steps/setup-white-label.js",
    "reset-to-dev": "node 01-client-setup/steps/setup-white-label.js demo",
    "check-unused-files": "node shared/validators/check-unused-files.js",
    "minify:animations": "node shared/validators/minify-animations.js",
    "minify:animations:check": "node shared/validators/minify-animations.js --check",
    "validate-assets": "node shared/validators/asset-validator.js",
    "preflight": "node shared/utils/preflight-check.js",
    "create-client": "node 01-client-setup/cli/create-client.js",
    "update-client": "node 01-client-setup/cli/update-client.js",
    "update-metadata": "node 01-client-setup/cli/update-metadata.js",
    "rollback-client": "node 01-client-setup/cli/rollback-client.js",
    "verify-client": "node 01-client-setup/cli/verify-client.js",
    "deploy": "node 02-build-deploy/cli/deploy-client.js",
    "export-demo": "node 03-data-management/cli/export-demo-data.js",
    "screenshots": "node 02-build-deploy/cli/generate-screenshots.js",
    "update-screenshots": "node 02-build-deploy/cli/update-screenshots.js",
    "build-only": "node 02-build-deploy/build-client.js --no-deploy",
    "shorebird": "node 02-build-deploy/cli/shorebird.js",
    "shorebird:release": "node 02-build-deploy/cli/shorebird.js release",
    "shorebird:patch": "node 02-build-deploy/cli/shorebird.js patch",
    "deploy-admin": "node 02-build-deploy/cli/deploy-admin.js",
    "build-admin": "node 02-build-deploy/cli/deploy-admin.js --build-only",
    "increment-build": "node 02-build-deploy/increment-version.js build",
    "bump-patch": "node 02-build-deploy/increment-version.js patch",
    "bump-minor": "node 02-build-deploy/increment-version.js minor",
    "bump-major": "node 02-build-deploy/increment-version.js major",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js __tests__/unit",
    "test:integration": "jest --config jest.config.js __tests__/integration",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watch",
    "test:all": "node tests/run-tests.js --all",
    "test:flow": "node tests/run-tests.js --flow",
    "test:phase": "node tests/run-tests.js --phase",
    "test:cleanup": "node tests/cleanup.js",
    "lint": "eslint **/*.js --max-warnings 0 --ignore-pattern node_modules/",
    "lint:fix": "eslint **/*.js --fix --ignore-pattern node_modules/",
    "format:check": "prettier --check '**/*.{js,json}' --ignore-path .gitignore",
    "format:write": "prettier --write '**/*.{js,json}' --ignore-path .gitignore",
    "audit:check": "npm audit --audit-level=moderate",
    "check:syntax": "find . -name '*.js' -type f -not -path './node_modules/*' -exec node --check {} \\;",
    "check:security": "grep -r 'API_KEY\\|SECRET\\|PASSWORD\\|TOKEN' . --exclude-dir=node_modules || echo 'No hardcoded secrets found'",
    "perfect-code": "npm run lint && npm run format:check && npm run audit:check && npm run check:syntax",
    "optimize:lottie": "find shared/shared_assets/animations -name '*.json' -type f -exec sh -c 'cat \"{}\" | jq -c . > \"{}.min\" && mv \"{}.min\" \"{}\"' \\;",
    "optimize:lottie:prettier": "prettier --write --print-width 0 'shared/shared_assets/animations/**/*.json'",
    "optimize:svg": "svgo -f shared/shared_assets/images --recursive",
    "optimize:assets": "npm run optimize:lottie:prettier && npm run optimize:svg"
  },
  "dependencies": {
    "@google-cloud/resource-manager": "^5.0.0",
    "dotenv": "^16.4.5",
    "firebase-admin": "^12.0.0",
    "fs-extra": "^10.0.0",
    "node-telegram-bot-api": "^0.64.0",
    "simple-git": "^3.21.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.3.3",
    "inquirer": "^8.2.6",
    "jest": "^29.7.0",
    "ora": "^5.4.1",
    "prettier": "^3.2.5",
    "sharp": "^0.34.4",
    "svgo": "^4.0.0",
    "yargs": "^17.7.2"
  },
  "author": "LoyaltyHub",
  "license": "MIT"
}
